# Personal Ubuntu Post-Installation Setup.
# Created by Kyle Gough.

# Update and Upgrade system.
sudo apt update
sudo apt upgrade

# Install priority packages.
sudo apt install vim
sudo apt install git
sudo apt install curl
sudo apt install python
sudo apt install ranger

# Change Hostname.
sudo vim /etc/hostname

# Configure Git.
git config --global user.name "Kyle Gough"
git config --global user.email "kylegough98@gmail.com"

# Install ZSH.
sudo apt install zsh
chsh -s /usr/bin/zsh

# Oh My ZSH.
cd ~
sh -c "$(curl -fsSL https://raw.githubusercontent.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
cd ~/.oh-my-zsh/custom/plugins
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions
cd ${ZSH_CUSTOM1:-$ZSH/custom}/plugins
git clone https://github.com/djui/alias-tips.git

# Clone config repository.
cd ~/Documents
git clone https://github.com/KyleGough/dotfiles.git
cd dotfiles
ln .zshrc ~/.zshrc
ln .vimrc ~/.vimrc
touch aliases/private
touch ~/Documents/todo

# Vim.
cd ~/Documents/config
ln .vimrc ~/.vimrc

# urxvt.
sudo apt install rxvt-unicode
ln .Xresources ~/.Xresources
sudo update-alternatives --config x-terminator-emulator

# Neofetch.
sudo apt install neofetch

# mgitstatus.
cd ~
mkdir .misc
cd .misc
git clone https://github.com/fboender/multi-git-status.git
cd multi-git-status
sudo ./install.sh

# Redshift.
sudo apt install redshift
cd ~/.config
mkdir redshift 
cd ~/Documents/config
ln redshift.conf ~/.config/redshift/redshift.conf

# Torrents.
cd ~/Downloads
mkdir torrents

# Visual Studio Code.
sudo apt update
sudo apt install software-properties-common apt-transport-https wget
wget -q https://packages.microsoft.com/keys/microsoft.asc -O- | sudo apt-key add -
sudo add-apt-repository "deb [arch=amd64] https://packages.microsoft.com/repos/vscode stable main"
sudo apt update
sudo apt install code

# Python 3.7.
sudo apt update
sudo apt install software-properties-common
sudo add-apt-repository ppa:deadsnakes/ppa
sudo apt update
sudo apt install python3.7
sudo mv /usr/bin/python /usr/bin/python.old
sudo ln -s /usr/bin/python3.7 /usr/bin/python

# Lock screen.
sudo apt install gnome-screensaver
